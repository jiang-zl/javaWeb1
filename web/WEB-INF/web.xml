<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <!--  这是关于登陆页面的Servlet配置信息  -->
    <servlet>
        <servlet-name>/requestLogin</servlet-name>
        <servlet-class>indexServlet.ServletLogin</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>/requestLogin</servlet-name>
        <url-pattern>/requestLogin</url-pattern>
    </servlet-mapping>


    <!--  这是关于注册页面的Servlet配置信息  -->
    <servlet>
        <servlet-name>/requestRegister</servlet-name>
        <servlet-class>indexServlet.ServletRegister</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>/requestRegister</servlet-name>
        <url-pattern>/requestRegister</url-pattern>
    </servlet-mapping>

</web-app>